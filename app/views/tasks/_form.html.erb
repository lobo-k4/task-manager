<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores:</h4>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Título", class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Descripción", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, "Fecha de vencimiento", class: "form-label" %>
    <%= form.datetime_local_field :due_date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :priority, "Prioridad", class: "form-label" %>
    <%= form.select :priority, 
          options_for_select(
            Task.priorities.map { |key, value| [key.humanize, key] },
            @task.priority
          ), 
          {}, 
          class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Estado", class: "form-label" %>
    <%= form.select :status, 
          options_for_select(
            Task.statuses.map { |key, value| [key.humanize, key] },
            @task.status
          ), 
          {}, 
          class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Categoría", class: "form-label" %>
    <%= form.select :category_id, 
          options_for_select(
            current_user.categories.pluck(:name, :id), 
            @task.category_id
          ), 
          { include_blank: "Sin categoría" }, 
          class: "form-select" %>
  </div>

  <div class="d-grid">
    <%= form.submit @task.persisted? ? "Actualizar Tarea" : "Crear Tarea", class: "btn btn-primary" %>
  </div>
<% end %>